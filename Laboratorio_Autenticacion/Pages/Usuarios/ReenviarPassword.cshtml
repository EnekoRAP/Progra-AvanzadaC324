@page
@model ReenviarPasswordModel
@{
    ViewData["Title"] = "Password";
}

<h2>Reenvío de Password</h2>
<form method="post">
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="usuario.email" asp-for="usuario.Email" required />
    </div>
    <button type="submit">Enviar</button>
</form>

@if (!string.IsNullOrEmpty(Model.mensaje))
{
    <p>@Model.mensaje</p>
}