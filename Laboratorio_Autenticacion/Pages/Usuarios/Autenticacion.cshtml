@page
@model AutenticacionModel
@{
    ViewData["Title"] = "Autenticación";
}

<h2>Autenticación de Usuario</h2>
<form method="post">
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="usuario.Email" asp-for="usuario.Email" required />
    </div>
    <div>
        <label for="password">Clave:</label>
        <input type="password" id="password" name="usuario.Password" asp-for="usuario.Password" required />
    </div>
    <button type="submit">Iniciar Sesión</button>
</form>

@if (!string.IsNullOrEmpty(Model.mensaje))
{
    <p>@Model.mensaje</p>
}